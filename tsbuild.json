{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "jsx": "react",
    "target": "es5",
    "strictNullChecks": true,
    "baseUrl": "./src/",
    "types": ["node"],
    "paths": {
      "react-popover-component": ["Popover.tsx"],
      "react-popover-component/dist/styles.css": ["Popover.scss"]
    }
  },
  "exclude": [
    "spec/**/*",
    "node_modules",
    "dist/**/*",
    "tmp",
    "index.ts"
  ],
  "compileOnSave": false
}
